<html>

<body>
<div>
    <form method="post" action="add">
        <input type="text" name="name" placeholder="Введите имя товара" />
        <input type="text" name="shortname" placeholder="Введите короткое имя">
<!--        <br>-->
        <input type="text" name="characteristics" placeholder="Введите описание">
        <button type="submit">Добавить</button>
    </form>
    <form method="post" action="del">
        <input type="text" name="id" placeholder="Введите id товара" />
        <button type="submit">Удалить</button>
    </form>
</div>
<div>Список товаров</div>
<form method="post" action="filter">
    <input type="text" name="filter" placeholder="Введите короткое имя">
    <button type="submit">Найти</button>
</form>
{{#products}}
    <div>
        <b>{{id}}</b>
        <span>{{name}}</span>
        <i>{{shortName}}</i>
        <span>{{characteristics}}</span>
    </div>
{{/products}}
</body>
</html>
